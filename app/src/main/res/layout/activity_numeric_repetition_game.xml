<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NumericRepetitionGameActivity"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/gradient_toolbar"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/big_back_btn" />

        <TextView
            android:id="@+id/screen_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/inter_black"
            android:text="Mente CromÃ¡tica"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/seconds_remaining"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <ProgressBar
        android:id="@+id/timerProgress2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="288dp"
        android:layout_height="8dp"
        android:layout_marginTop="12dp"
        android:indeterminate="false"
        android:max="60"
        android:progress="60"
        android:progressDrawable="@drawable/custom_progress_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/phaseCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="@string/phase"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timerProgress2" />

    <ImageView
        android:id="@+id/seventh_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/math_btn"
        app:layout_constraintTop_toBottomOf="@id/phaseCounter"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/eigth_btn"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/eigth_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/math_btn"
        app:layout_constraintTop_toBottomOf="@id/phaseCounter"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/ninth_btn"
        app:layout_constraintStart_toEndOf="@+id/seventh_btn" />

    <ImageView
        android:id="@+id/ninth_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/math_btn"
        app:layout_constraintTop_toBottomOf="@id/phaseCounter"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/eigth_btn" />

    <ImageView
        android:id="@+id/fourth_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/math_btn"
        app:layout_constraintBottom_toTopOf="@id/first_btn"
        app:layout_constraintEnd_toStartOf="@+id/fifth_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seventh_btn" />

    <ImageView
        android:id="@+id/fifth_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/math_btn"
        app:layout_constraintEnd_toStartOf="@+id/sixth_btn"
        app:layout_constraintStart_toEndOf="@+id/fourth_btn"
        app:layout_constraintTop_toBottomOf="@+id/eigth_btn"
        app:layout_constraintBottom_toTopOf="@id/second_btn"/>

    <ImageView
        android:id="@+id/sixth_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/math_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/third_btn"
        app:layout_constraintStart_toEndOf="@+id/fifth_btn"
        app:layout_constraintTop_toBottomOf="@+id/ninth_btn" />

    <ImageView
        android:id="@+id/first_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/math_btn"
        app:layout_constraintStart_toStartOf="@+id/fourth_btn"
        app:layout_constraintTop_toBottomOf="@+id/fourth_btn" />

    <ImageView
        android:id="@+id/second_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/math_btn"
        app:layout_constraintStart_toStartOf="@+id/fifth_btn"
        app:layout_constraintTop_toBottomOf="@+id/fifth_btn"
        app:layout_constraintBottom_toTopOf="@id/null_btn"/>

    <ImageView
        android:id="@+id/third_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/math_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fifth_btn"
        app:layout_constraintTop_toBottomOf="@+id/sixth_btn" />

    <ImageView
        android:id="@+id/null_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/math_btn"
        app:layout_constraintStart_toStartOf="@+id/second_btn"
        app:layout_constraintEnd_toEndOf="@+id/second_btn"
        app:layout_constraintTop_toBottomOf="@+id/second_btn" />

    <TextView
        android:id="@+id/seventh_btn_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textSize="24sp"
        android:textColor="#6D4F17"
        android:fontFamily="@font/inter_black"
        app:layout_constraintBottom_toBottomOf="@+id/seventh_btn"
        app:layout_constraintEnd_toEndOf="@+id/seventh_btn"
        app:layout_constraintStart_toStartOf="@+id/seventh_btn"
        app:layout_constraintTop_toTopOf="@+id/seventh_btn" />

    <TextView
        android:id="@+id/eigth_btn_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="24sp"
        android:textColor="#6D4F17"
        android:fontFamily="@font/inter_black"
        app:layout_constraintBottom_toBottomOf="@+id/eigth_btn"
        app:layout_constraintEnd_toEndOf="@+id/eigth_btn"
        app:layout_constraintStart_toStartOf="@+id/eigth_btn"
        app:layout_constraintTop_toTopOf="@+id/eigth_btn" />

    <TextView
        android:id="@+id/ninth_btn_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="24sp"
        android:textColor="#6D4F17"
        android:fontFamily="@font/inter_black"
        app:layout_constraintBottom_toBottomOf="@+id/ninth_btn"
        app:layout_constraintEnd_toEndOf="@+id/ninth_btn"
        app:layout_constraintStart_toStartOf="@+id/ninth_btn"
        app:layout_constraintTop_toTopOf="@+id/ninth_btn" />

    <TextView
        android:id="@+id/fourth_btn_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="24sp"
        android:textColor="#6D4F17"
        android:fontFamily="@font/inter_black"
        app:layout_constraintBottom_toBottomOf="@+id/fourth_btn"
        app:layout_constraintEnd_toEndOf="@+id/fourth_btn"
        app:layout_constraintStart_toStartOf="@+id/fourth_btn"
        app:layout_constraintTop_toTopOf="@+id/fourth_btn" />

    <TextView
        android:id="@+id/fifth_btn_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="24sp"
        android:textColor="#6D4F17"
        android:fontFamily="@font/inter_black"
        app:layout_constraintBottom_toBottomOf="@+id/fifth_btn"
        app:layout_constraintEnd_toEndOf="@+id/fifth_btn"
        app:layout_constraintStart_toStartOf="@+id/fifth_btn"
        app:layout_constraintTop_toTopOf="@+id/fifth_btn" />

    <TextView
        android:id="@+id/sixth_btn_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="24sp"
        android:textColor="#6D4F17"
        android:fontFamily="@font/inter_black"
        app:layout_constraintBottom_toBottomOf="@+id/sixth_btn"
        app:layout_constraintEnd_toEndOf="@+id/sixth_btn"
        app:layout_constraintStart_toStartOf="@+id/sixth_btn"
        app:layout_constraintTop_toTopOf="@+id/sixth_btn" />

    <TextView
        android:id="@+id/first_btn_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="24sp"
        android:textColor="#6D4F17"
        android:fontFamily="@font/inter_black"
        app:layout_constraintBottom_toBottomOf="@+id/first_btn"
        app:layout_constraintEnd_toEndOf="@+id/first_btn"
        app:layout_constraintStart_toStartOf="@+id/first_btn"
        app:layout_constraintTop_toTopOf="@+id/first_btn" />

    <TextView
        android:id="@+id/second_btn_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="24sp"
        android:textColor="#6D4F17"
        android:fontFamily="@font/inter_black"
        app:layout_constraintBottom_toBottomOf="@+id/second_btn"
        app:layout_constraintEnd_toEndOf="@+id/second_btn"
        app:layout_constraintStart_toStartOf="@+id/second_btn"
        app:layout_constraintTop_toTopOf="@+id/second_btn" />

    <TextView
        android:id="@+id/third_btn_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="24sp"
        android:textColor="#6D4F17"
        android:fontFamily="@font/inter_black"
        app:layout_constraintBottom_toBottomOf="@+id/third_btn"
        app:layout_constraintEnd_toEndOf="@+id/third_btn"
        app:layout_constraintStart_toStartOf="@+id/third_btn"
        app:layout_constraintTop_toTopOf="@+id/third_btn" />

    <TextView
        android:id="@+id/zero_btn_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="24sp"
        android:textColor="#6D4F17"
        android:fontFamily="@font/inter_black"
        app:layout_constraintBottom_toBottomOf="@+id/null_btn"
        app:layout_constraintEnd_toEndOf="@+id/null_btn"
        app:layout_constraintStart_toStartOf="@+id/null_btn"
        app:layout_constraintTop_toTopOf="@+id/null_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>