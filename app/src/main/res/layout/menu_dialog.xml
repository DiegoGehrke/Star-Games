<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/second_frame"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/reward_detail"
            android:paddingEnd="8dp"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/inter_extrabold"
                android:text="@string/menu"
                android:textColor="#A8BBE7"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/first_option"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/item_list_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_txt" />

            <ImageView
                android:id="@+id/referral_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/referral_program_icon"
                app:layout_constraintBottom_toBottomOf="@+id/first_option"
                app:layout_constraintStart_toStartOf="@+id/first_option"
                app:layout_constraintTop_toTopOf="@+id/first_option" />

            <TextView
                android:id="@+id/referral_program_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:layout_marginEnd="4dp"
                android:text="@string/invite_your_friends"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/first_option"
                app:layout_constraintEnd_toEndOf="@+id/first_option"
                app:layout_constraintStart_toEndOf="@+id/referral_icon"
                app:layout_constraintTop_toTopOf="@+id/first_option" />

            <ImageView
                android:id="@+id/second_option"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/item_list_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/first_option" />


            <TextView
                android:id="@+id/change_stars_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="@string/exchange_stars_mini"
                android:textColor="@color/white"
                android:layout_marginEnd="4dp"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/second_option"
                app:layout_constraintEnd_toEndOf="@+id/second_option"
                app:layout_constraintStart_toEndOf="@+id/change_stars_icon"
                app:layout_constraintTop_toTopOf="@+id/second_option" />


            <ImageView
                android:id="@+id/change_stars_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/icon_withdraw"
                app:layout_constraintBottom_toBottomOf="@+id/second_option"
                app:layout_constraintStart_toStartOf="@+id/second_option"
                app:layout_constraintTop_toTopOf="@+id/second_option" />

            <ImageView
                android:id="@+id/third_option"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/item_list_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/second_option" />


            <TextView
                android:id="@+id/withdraw_history_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="@string/withdraw_history"
                android:layout_marginEnd="4dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/third_option"
                app:layout_constraintEnd_toEndOf="@+id/third_option"
                app:layout_constraintStart_toEndOf="@+id/withdraw_history_icon"
                app:layout_constraintTop_toTopOf="@+id/third_option" />


            <ImageView
                android:id="@+id/withdraw_history_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/history_icon"
                app:layout_constraintBottom_toBottomOf="@+id/third_option"
                app:layout_constraintStart_toStartOf="@+id/third_option"
                app:layout_constraintTop_toTopOf="@+id/third_option" />
        </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>