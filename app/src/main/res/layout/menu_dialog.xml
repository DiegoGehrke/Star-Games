<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/second_frame"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/reward_detail">

            <TextView
                android:id="@+id/title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/inter_medium"
                android:text="MENU"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/first_option"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/item_list_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_txt" />

            <ImageView
                android:id="@+id/referral_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/referral_program_icon"
                app:layout_constraintBottom_toBottomOf="@+id/first_option"
                app:layout_constraintStart_toStartOf="@+id/first_option"
                app:layout_constraintTop_toTopOf="@+id/first_option" />

            <TextView
                android:id="@+id/referral_program_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/inter_bold"
                android:text="PROGRAMA DE REFERÃŠNCIA"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/first_option"
                app:layout_constraintEnd_toEndOf="@+id/first_option"
                app:layout_constraintTop_toTopOf="@+id/first_option" />

            <ImageView
                android:id="@+id/second_option"
                android:layout_width="match_parent"
                android:layout_height="64dp"

                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/item_list_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/first_option" />


        </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>