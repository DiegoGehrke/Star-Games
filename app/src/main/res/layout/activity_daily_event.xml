<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DailyEventActivity"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/background">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="4.5dp"
            android:scaleType="fitXY"
            android:src="@drawable/mini_frame_event"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/frame_event_desc"
            app:layout_constraintEnd_toEndOf="@+id/imageView7"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/imageView7"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <ImageView
            android:id="@+id/help_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/help_icon"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView7"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/linden_hill"
            android:text="@string/daily_event_desc"
            android:textColor="#CCE4F7"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView8"
            app:layout_constraintEnd_toEndOf="@+id/imageView8"
            app:layout_constraintStart_toStartOf="@+id/imageView8"
            app:layout_constraintTop_toTopOf="@+id/imageView8" />

        <ImageView
            android:id="@+id/gift1"
            android:layout_width="24dp"
            android:layout_height="27dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="60dp"
            android:src="@drawable/gifticon"
            app:layout_constraintStart_toStartOf="@+id/eventPointsProgress"
            app:layout_constraintTop_toBottomOf="@+id/imageView8" />

        <ImageView
            android:id="@+id/gift2"
            android:layout_width="24dp"
            android:layout_height="27dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="130dp"
            android:src="@drawable/gifticon"
            app:layout_constraintStart_toStartOf="@+id/eventPointsProgress"
            app:layout_constraintTop_toBottomOf="@+id/imageView8" />

        <ImageView
            android:id="@+id/gift3"
            android:layout_width="24dp"
            android:layout_height="27dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="201dp"
            android:src="@drawable/gifticon"
            app:layout_constraintStart_toStartOf="@+id/eventPointsProgress"
            app:layout_constraintTop_toBottomOf="@+id/imageView8" />

        <ImageView
            android:id="@+id/gift4"
            android:layout_width="24dp"
            android:layout_height="27dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="271dp"
            android:src="@drawable/gifticon"
            app:layout_constraintStart_toStartOf="@+id/eventPointsProgress"
            app:layout_constraintTop_toBottomOf="@+id/imageView8" />

        <ProgressBar
            android:id="@+id/eventPointsProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="286dp"
            android:layout_height="8dp"
            android:layout_marginTop="28dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/custom_progress_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gift4" />

        <ImageView
            android:id="@+id/first_meta_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="-4dp"
            android:src="@drawable/meta"
            app:layout_constraintBottom_toTopOf="@+id/eventPointsProgress"
            app:layout_constraintStart_toStartOf="@+id/eventPointsProgress"
            app:layout_constraintTop_toBottomOf="@+id/gift1" />

        <ImageView
            android:id="@+id/second_meta_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="130dp"
            android:layout_marginBottom="-4dp"
            android:src="@drawable/meta"
            app:layout_constraintBottom_toTopOf="@+id/eventPointsProgress"
            app:layout_constraintStart_toStartOf="@+id/eventPointsProgress"
            app:layout_constraintTop_toBottomOf="@+id/gift2" />

        <ImageView
            android:id="@+id/third_meta_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="201dp"
            android:layout_marginBottom="-4dp"
            android:src="@drawable/meta"
            app:layout_constraintBottom_toTopOf="@+id/eventPointsProgress"
            app:layout_constraintStart_toStartOf="@+id/eventPointsProgress"
            app:layout_constraintTop_toBottomOf="@+id/gift3" />

        <ImageView
            android:id="@+id/fourth_meta_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="271dp"
            android:layout_marginBottom="-4dp"
            android:src="@drawable/meta"
            app:layout_constraintBottom_toTopOf="@+id/eventPointsProgress"
            app:layout_constraintStart_toStartOf="@+id/eventPointsProgress"
            app:layout_constraintTop_toBottomOf="@+id/gift4" />

        <TextView
            android:id="@+id/first_meta_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="25"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/first_meta_img"
            app:layout_constraintEnd_toEndOf="@+id/first_meta_img"
            app:layout_constraintStart_toStartOf="@+id/first_meta_img"
            app:layout_constraintTop_toTopOf="@+id/first_meta_img" />

        <TextView
            android:id="@+id/second_meta_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="50"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/second_meta_img"
            app:layout_constraintEnd_toEndOf="@+id/second_meta_img"
            app:layout_constraintStart_toStartOf="@+id/second_meta_img"
            app:layout_constraintTop_toTopOf="@+id/second_meta_img" />

        <TextView
            android:id="@+id/third_meta_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="75"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/third_meta_img"
            app:layout_constraintEnd_toEndOf="@+id/third_meta_img"
            app:layout_constraintStart_toStartOf="@+id/third_meta_img"
            app:layout_constraintTop_toTopOf="@+id/third_meta_img" />

        <TextView
            android:id="@+id/fourth_meta_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="100"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/fourth_meta_img"
            app:layout_constraintEnd_toEndOf="@+id/fourth_meta_img"
            app:layout_constraintStart_toStartOf="@+id/fourth_meta_img"
            app:layout_constraintTop_toTopOf="@+id/fourth_meta_img" />

        <ImageView
            android:id="@+id/imageView10"
