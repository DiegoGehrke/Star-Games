            android:fontFamily="@font/inter_semibold"
            android:text="25 pts"
            android:textColor="#D4D8F8"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/third_quest_points_reward"
            app:layout_constraintEnd_toEndOf="@+id/third_quest_points_reward"
            app:layout_constraintStart_toStartOf="@+id/third_quest_points_reward"
