            android:layout_width="100dp"
            android:layout_height="8dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="12dp"
            android:indeterminate="false"
            android:max="250"
            android:progress="0"
            android:progressDrawable="@drawable/event_progress_bar"
            app:layout_constraintBottom_toBottomOf="@+id/first_quest_frame"
            app:layout_constraintStart_toStartOf="@+id/first_quest_frame"
            app:layout_constraintTop_toBottomOf="@+id/first_quest_icon" />

        <TextView
            android:id="@+id/first_quest_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="34dp"
            android:fontFamily="@font/inter_medium"
            android:text="@string/collect_250_stars"
            android:textColor="#D4D8F8"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/first_quest_frame"
            app:layout_constraintStart_toEndOf="@+id/first_quest_icon"
            app:layout_constraintTop_toTopOf="@+id/first_quest_frame" />

        <TextView
            android:id="@+id/first_quest_progress_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/inter_regular"
            android:text=""
            android:textColor="#FF8585"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/first_quest_frame"
            app:layout_constraintStart_toEndOf="@+id/first_quest_progress"
            />

        <ImageView
            android:id="@+id/first_quest_points_reward"
            android:layout_width="56dp"
            android:layout_height="26dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="34dp"
            android:scaleType="fitXY"
            android:src="@drawable/event_points_reward_background"
            app:layout_constraintBottom_toBottomOf="@+id/first_quest_frame"
            app:layout_constraintEnd_toStartOf="@+id/claim_btn"
            app:layout_constraintStart_toEndOf="@+id/first_quest_desc"
            app:layout_constraintTop_toTopOf="@+id/first_quest_frame"/>

        <TextView
            android:id="@+id/first_quest_points_reward_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:text="25 pts"
            android:textColor="#D4D8F8"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/first_quest_points_reward"
            app:layout_constraintEnd_toEndOf="@+id/first_quest_points_reward"
            app:layout_constraintStart_toStartOf="@+id/first_quest_points_reward"
            app:layout_constraintTop_toTopOf="@+id/first_quest_points_reward"/>

        <LinearLayout
            android:id="@+id/claim_btn"
            android:layout_width="78dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/first_quest_frame"
            app:layout_constraintEnd_toEndOf="@+id/first_quest_frame"
            app:layout_constraintTop_toTopOf="@+id/first_quest_frame">

            <LinearLayout
                android:id="@+id/claim_btn_background"
                android:layout_width="78dp"
                android:layout_height="28dp"
                android:background="@drawable/event_claim_button"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/claim_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_extrabold"
                    android:gravity="center"
                    android:text="@string/incomplete"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/second_quest_frame"
            android:layout_width="344dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/quest_list_item_drawable"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/first_quest_frame" />

        <ImageView
            android:id="@+id/second_quest_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/game_ticket_rounded"
            app:layout_constraintBottom_toBottomOf="@+id/second_quest_frame"
            app:layout_constraintStart_toStartOf="@+id/second_quest_frame"
            app:layout_constraintTop_toTopOf="@+id/second_quest_frame" />

        <ProgressBar
            android:id="@+id/second_quest_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="100dp"
            android:layout_height="8dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="12dp"
            android:indeterminate="false"
            android:max="50"
            android:progress="0"
            android:progressDrawable="@drawable/event_progress_bar"
            app:layout_constraintBottom_toBottomOf="@+id/second_quest_frame"
            app:layout_constraintStart_toStartOf="@+id/second_quest_frame"
            app:layout_constraintTop_toBottomOf="@+id/second_quest_icon" />

        <TextView
            android:id="@+id/second_quest_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="34dp"
            android:fontFamily="@font/inter_medium"
            android:text="@string/use_50_tickets"
            android:textColor="#D4D8F8"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/second_quest_frame"
            app:layout_constraintStart_toEndOf="@+id/second_quest_icon"
            app:layout_constraintTop_toTopOf="@+id/second_quest_frame" />

        <TextView
            android:id="@+id/second_quest_progress_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/inter_regular"
            android:text=""
            android:textColor="#FF8585"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/second_quest_frame"
            app:layout_constraintStart_toEndOf="@+id/second_quest_progress"
            />

        <ImageView
            android:id="@+id/second_quest_points_reward"
            android:layout_width="56dp"
            android:layout_height="26dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="34dp"
            android:scaleType="fitXY"
            android:src="@drawable/event_points_reward_background"
            app:layout_constraintBottom_toBottomOf="@+id/second_quest_frame"
            app:layout_constraintEnd_toStartOf="@+id/claim2_btn"
            app:layout_constraintStart_toEndOf="@+id/second_quest_desc"
            app:layout_constraintTop_toTopOf="@+id/second_quest_frame" />

        <TextView
            android:id="@+id/second_quest_points_reward_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:text="50 pts"
            android:textColor="#D4D8F8"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/second_quest_points_reward"
            app:layout_constraintEnd_toEndOf="@+id/second_quest_points_reward"
            app:layout_constraintStart_toStartOf="@+id/second_quest_points_reward"
            app:layout_constraintTop_toTopOf="@+id/second_quest_points_reward"/>

        <LinearLayout
            android:id="@+id/claim2_btn"
            android:layout_width="78dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/second_quest_frame"
            app:layout_constraintEnd_toEndOf="@+id/second_quest_frame"
            app:layout_constraintTop_toTopOf="@+id/second_quest_frame">

            <LinearLayout
                android:id="@+id/claim_btn_background1"
                android:layout_width="78dp"
                android:layout_height="28dp"
                android:background="@drawable/event_claim_button"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/claim2_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_extrabold"
                    android:gravity="center"
                    android:text="@string/receive"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/third_quest_frame"
            android:layout_width="344dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/quest_list_item_drawable"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/second_quest_frame" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/daily_login_icon"
            app:layout_constraintBottom_toBottomOf="@+id/third_quest_frame"
            app:layout_constraintStart_toStartOf="@+id/third_quest_frame"
            app:layout_constraintTop_toTopOf="@+id/third_quest_frame" />

        <TextView
            android:id="@+id/third_quest_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="33dp"
            android:fontFamily="@font/inter_medium"
            android:text="@string/enter_the_app"
            android:textColor="#D4D8F8"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/third_quest_frame"
