<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExchangeStarsActivity"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/gradient_toolbar"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/big_back_btn" />

        <TextView
            android:id="@+id/screen_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/inter_black"
            android:text="@string/exchange_stars"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/withdraw_option"
        android:layout_width="148dp"
        android:layout_height="148dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/withdraw_option_background"
        app:layout_constraintEnd_toStartOf="@+id/first_withdraw_option"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <ImageView
        android:id="@+id/one_star_option"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/star"
        app:layout_constraintEnd_toEndOf="@+id/withdraw_option"
        app:layout_constraintStart_toStartOf="@+id/withdraw_option"
        app:layout_constraintTop_toTopOf="@+id/withdraw_option" />

    <TextView
        android:id="@+id/usd_option_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_black"
        android:text="US$ 0.50"
        android:textColor="#FBEACC"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/withdraw_option"
        app:layout_constraintStart_toStartOf="@+id/withdraw_option"
        app:layout_constraintTop_toBottomOf="@+id/one_star_option" />

    <TextView
        android:id="@+id/stars_cost_option_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/inter_bold"
        android:text="@string/_2_500_stars"
        android:textColor="#FDE87B"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/withdraw_option"
        app:layout_constraintStart_toStartOf="@+id/withdraw_option"
        app:layout_constraintTop_toBottomOf="@+id/usd_option_txt" />

    <ImageView
        android:id="@+id/send_request_option_btn"
        android:layout_width="148dp"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/send_request"
        app:layout_constraintEnd_toEndOf="@+id/withdraw_option"
        app:layout_constraintStart_toStartOf="@+id/withdraw_option"
        app:layout_constraintTop_toBottomOf="@+id/stars_cost_option_txt" />

    <TextView
        android:id="@+id/send_request_txt_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_black"
        android:text="SEND REQUEST"
        android:textColor="#684E26"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/send_request_option_btn"
        app:layout_constraintEnd_toEndOf="@+id/send_request_option_btn"
        app:layout_constraintStart_toStartOf="@+id/send_request_option_btn"
        app:layout_constraintTop_toTopOf="@+id/send_request_option_btn" />


    <ImageView
        android:id="@+id/first_withdraw_option"
        android:layout_width="148dp"
        android:layout_height="148dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/withdraw_option_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/withdraw_option"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <ImageView
        android:id="@+id/one_star_first_option"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/star"
        app:layout_constraintEnd_toEndOf="@+id/first_withdraw_option"
        app:layout_constraintStart_toStartOf="@+id/first_withdraw_option"
        app:layout_constraintTop_toTopOf="@+id/first_withdraw_option" />

    <TextView
        android:id="@+id/usd_first_option_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_black"
        android:text="US$ 1.00"
        android:textColor="#FBEACC"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/first_withdraw_option"
        app:layout_constraintStart_toStartOf="@+id/first_withdraw_option"
        app:layout_constraintTop_toBottomOf="@+id/one_star_first_option" />

    <TextView
        android:id="@+id/stars_cost_first_option_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/inter_bold"
        android:text="@string/_5_000_stars"
        android:textColor="#FDE87B"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/first_withdraw_option"
        app:layout_constraintStart_toStartOf="@+id/first_withdraw_option"
        app:layout_constraintTop_toBottomOf="@+id/usd_first_option_txt" />

    <ImageView
        android:id="@+id/send_request_first_option_btn"
        android:layout_width="148dp"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/send_request"
        app:layout_constraintEnd_toEndOf="@+id/first_withdraw_option"
        app:layout_constraintStart_toStartOf="@+id/first_withdraw_option"
        app:layout_constraintTop_toBottomOf="@+id/stars_cost_first_option_txt" />

    <TextView
        android:id="@+id/send_request_txt_first_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_black"
        android:text="SEND REQUEST"
        android:textColor="#684E26"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/send_request_first_option_btn"
        app:layout_constraintEnd_toEndOf="@+id/send_request_first_option_btn"
        app:layout_constraintStart_toStartOf="@+id/send_request_first_option_btn"
        app:layout_constraintTop_toTopOf="@+id/send_request_first_option_btn" />

    <ImageView
        android:id="@+id/second_withdraw_option"
        android:layout_width="148dp"
        android:layout_height="148dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/withdraw_option_background"
        app:layout_constraintEnd_toStartOf="@id/third_withdraw_option"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/withdraw_option" />

    <ImageView
        android:id="@+id/one_star_second_option"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/star"
        app:layout_constraintEnd_toEndOf="@+id/second_withdraw_option"
        app:layout_constraintStart_toEndOf="@+id/two_star_second_option"
        app:layout_constraintTop_toTopOf="@+id/second_withdraw_option" />

    <ImageView
        android:id="@+id/two_star_second_option"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/star"
        app:layout_constraintEnd_toStartOf="@id/one_star_second_option"
        app:layout_constraintStart_toStartOf="@+id/second_withdraw_option"
        app:layout_constraintTop_toTopOf="@+id/second_withdraw_option" />

    <TextView
        android:id="@+id/usd_second_option_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_black"
        android:text="US$ 5.00"
        android:textColor="#FBEACC"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/second_withdraw_option"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="@+id/second_withdraw_option"
        app:layout_constraintTop_toBottomOf="@+id/one_star_second_option" />

    <TextView
        android:id="@+id/stars_second_option_cost_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/inter_bold"
        android:text="@string/_10_000_stars"
        android:textColor="#FDE87B"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/second_withdraw_option"
        app:layout_constraintStart_toStartOf="@+id/second_withdraw_option"
        app:layout_constraintTop_toBottomOf="@+id/usd_second_option_txt" />

    <ImageView
        android:id="@+id/send_request_second_option_btn"
        android:layout_width="148dp"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/send_request"
        app:layout_constraintEnd_toEndOf="@+id/second_withdraw_option"
        app:layout_constraintStart_toStartOf="@+id/second_withdraw_option"
        app:layout_constraintTop_toBottomOf="@+id/stars_second_option_cost_txt" />

    <TextView
        android:id="@+id/send_request_txt_second_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_black"
        android:text="SEND REQUEST"
        android:textColor="#684E26"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/send_request_second_option_btn"
        app:layout_constraintEnd_toEndOf="@+id/send_request_second_option_btn"
        app:layout_constraintStart_toStartOf="@+id/send_request_second_option_btn"
        app:layout_constraintTop_toTopOf="@+id/send_request_second_option_btn" />

    <ImageView
        android:id="@+id/third_withdraw_option"
        android:layout_width="148dp"
        android:layout_height="148dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/withdraw_option_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/second_withdraw_option"
        app:layout_constraintTop_toBottomOf="@+id/first_withdraw_option" />

    <ImageView
        android:id="@+id/one_star_third_option"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/mini_star"
        app:layout_constraintEnd_toEndOf="@+id/third_withdraw_option"
        app:layout_constraintStart_toEndOf="@+id/two_star_third_option"
        app:layout_constraintTop_toTopOf="@+id/third_withdraw_option" />

    <ImageView
        android:id="@+id/two_star_third_option"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/mini_star"
        app:layout_constraintEnd_toStartOf="@id/one_star_third_option"
        app:layout_constraintStart_toStartOf="@+id/third_withdraw_option"
        app:layout_constraintTop_toTopOf="@+id/third_withdraw_option" />

    <ImageView
        android:id="@+id/three_star_third_option"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/star"
        app:layout_constraintEnd_toStartOf="@+id/one_star_third_option"
        app:layout_constraintStart_toEndOf="@+id/two_star_third_option"
        app:layout_constraintTop_toTopOf="@+id/third_withdraw_option" />

    <TextView
        android:id="@+id/usd_third_option_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_black"
        android:text="US$ 10.00"
        android:textColor="#FBEACC"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/third_withdraw_option"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="@+id/third_withdraw_option"
        app:layout_constraintTop_toBottomOf="@+id/one_star_third_option" />

    <TextView
        android:id="@+id/stars_third_option_cost_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/inter_bold"
        android:text="@string/_20_000_stars"
        android:textColor="#FDE87B"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/third_withdraw_option"
        app:layout_constraintStart_toStartOf="@+id/third_withdraw_option"
        app:layout_constraintTop_toBottomOf="@+id/usd_third_option_txt" />

    <ImageView
        android:id="@+id/send_request_third_option_btn"
        android:layout_width="148dp"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/send_request"
        app:layout_constraintEnd_toEndOf="@+id/third_withdraw_option"
        app:layout_constraintStart_toStartOf="@+id/third_withdraw_option"
        app:layout_constraintTop_toBottomOf="@+id/stars_third_option_cost_txt" />

    <TextView
        android:id="@+id/send_request_txt_third_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_black"
        android:text="SEND REQUEST"
        android:textColor="#684E26"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/send_request_third_option_btn"
        app:layout_constraintEnd_toEndOf="@+id/send_request_third_option_btn"
        app:layout_constraintStart_toStartOf="@+id/send_request_third_option_btn"
        app:layout_constraintTop_toTopOf="@+id/send_request_third_option_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>